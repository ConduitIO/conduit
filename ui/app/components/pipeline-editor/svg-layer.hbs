{{#if
  (and
    (gt this.pipelineNodeManager.sourceNodes.length 0)
    (gt this.pipelineNodeManager.destinationNodes.length 0)
  )
}}
  <svg id="svg-container" class="absolute top-0 left-0 pointer-events-none w-full h-full">
    <g id="svg-g-container" {{zoom-zoom pipelineNodeManager}}>
      {{#each this.pipelineNodeManager.paths as |p|}}
        <PipelineEditor::SvgLine @path={{p.svgPath}} />
      {{/each}}
    </g>
  </svg>
{{/if}}
